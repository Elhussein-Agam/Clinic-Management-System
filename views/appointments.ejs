<%- include('partials/header') %>

<div class="container mt-5">
  <% if (doctors && doctors.length > 0) { %>
    <h2>Book an Appointment</h2>
    <form action="/appointments/book" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="mb-3">
        <label class="form-label">Select Doctor</label>
        <select name="doctorId" class="form-select" required>
          <% doctors.forEach(doc => { %>
            <option value="<%= doc._id %>"><%= doc.username %> - <%= doc.specialization %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Appointment Date</label>
        <input type="datetime-local" name="date" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Book</button>
    </form>
  <% } %>

  <% if (appointments && appointments.length > 0) { %>
    <h2>My Appointments</h2>
    <table class="table mt-3">
      <thead>
        <tr>
          <th>Date</th>
          <th>With</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% appointments.forEach(app => { %>
          <tr>
            <td><%= new Date(app.date).toLocaleString() %></td>
            <% if (user.role === 'patient') { %>
              <td>Dr. <%= app.doctor.username %> (<%= app.doctor.specialization %>)</td>
            <% } else { %>
              <td><%= app.patient.username %></td>
            <% } %>
            <td><%= app.status %></td>
            <td>
              <% if (app.status === 'booked' && user.role === 'patient') { %>
                <form action="/appointments/cancel/<%= app._id %>" method="POST" class="d-inline">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button class="btn btn-danger btn-sm">Cancel</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

<%- include('partials/footer') %>